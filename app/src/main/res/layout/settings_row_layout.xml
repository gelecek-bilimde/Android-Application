<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#002547">

    <ImageView
        android:id="@+id/settings_row_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/bookmark"/>

    <TextView
        android:id="@+id/settings_row_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="@id/settings_row_imageView"
        app:layout_constraintBottom_toBottomOf="@id/settings_row_imageView"
        app:layout_constraintStart_toEndOf="@id/settings_row_imageView"
        app:layout_constraintHorizontal_bias="0"
        android:textSize="18sp"
        android:layout_marginStart="7dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>